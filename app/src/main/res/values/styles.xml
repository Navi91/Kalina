<resources>

    <style name="AppTheme" parent="AppThemeBase"/>

    <style name="AppThemeBase" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryDark">@android:color/white</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/bg_splash</item>
    </style>

    <style name="AppTheme.TranslucentStatusBar">
    </style>

    <style name="BaseTextView">
        <item name="android:gravity">center_vertical|left|start</item>
    </style>

    <style name="BaseTextView.14">
        <item name="android:textSize">@dimen/text_14sp</item>
    </style>

    <style name="BaseTextView.16">
        <item name="android:textSize">@dimen/text_16sp</item>
    </style>

    <style name="BaseTextView.18">
        <item name="android:textSize">@dimen/text_18sp</item>
    </style>

    <style name="BaseTextView.20">
        <item name="android:textSize">@dimen/text_20sp</item>
    </style>

</resources>
